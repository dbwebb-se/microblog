http {
    upstream microblog {
        server {{ groups["appserver"][0]}}:8000;
    }
    access_log /var/log/nginx/access.log
    error_log /var/log/nginx/error.log

    server {
        listen 80;
        server_name {{ domain_name }} www.{{domain_name}};

        location / {
            proxy_pass http://microblog;
        }
    }
}