FROM python:3.10-alpine
RUN adduser -D microblog

WORKDIR /home/microblog

ARG APP_VERSION=unknown
ENV APP_VERSION=${APP_VERSION}

# COPY . . 
COPY app app 
COPY migrations migrations 
COPY requirements requirements 
COPY requirements.txt microblog.py docker/boot.sh ./

RUN pip install --upgrade pip setuptools

# Combine Python environment setup and dependencies installation
RUN python -m venv .venv && \
    .venv/bin/pip3 install --no-cache-dir -r requirements.txt

HEALTHCHECK --interval=60s --timeout=20s --start-period=5s --retries=3 \
  CMD curl --fail http://localhost:5000/ || exit 1

ENV FLASK_APP microblog.py

# Combine chmod and chown commands
RUN chmod +x boot.sh && \
    chown -R microblog:microblog ./

USER microblog

EXPOSE 5000 
ENTRYPOINT ["./boot.sh"]